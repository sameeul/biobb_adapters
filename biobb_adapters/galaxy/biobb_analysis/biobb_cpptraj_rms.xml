<tool id="biobb_analysis_cpptraj_rms_ext" name="CpptrajRms" version="4.0.2" >
    <description>: Wrapper of the Ambertools Cpptraj module for calculating the Root Mean Square deviation (RMSd) of a given cpptraj compatible trajectory.</description>
    <requirements>
        <requirement type="package"
        version="4.0.2"
        >biobb_analysis</requirement>
    </requirements>
    <command detect_errors="aggressive"><![CDATA[
        
          ln -f -s ${input_top_path} ${input_top_path}_`echo $$`.${input_top_path.ext};
        
          ln -f -s ${input_traj_path} ${input_traj_path}_`echo $$`.${input_traj_path.ext};
        
          ln -f -s ${input_exp_path} ${input_exp_path}_`echo $$`.${input_exp_path.ext};
        
        #if $config.sele == "option1":
            ln -s -f ${config.properties} ${config.properties}_`echo $$`.${config.properties.ext};
          #end if

        cpptraj_rms

        #if $config.sele == "option1":
            --config ${config.properties}_`echo $$`.${config.properties.ext}
          #else if $config.sele == "option2":
            --config '${config.jsonstr}'
          #else if $config.sele == "option3":
            --config '__oc____dq__start__dq__:${properties.start},__dq__end__dq__:${properties.end},__dq__steps__dq__:${properties.steps},__dq__mask__dq__:__dq__${properties.mask}__dq__,__dq__reference__dq__:__dq__${properties.reference}__dq__,__dq__nofit__dq__:${properties.nofit},__dq__norotate__dq__:${properties.norotate},__dq__nomod__dq__:${properties.nomod},__dq__binary_path__dq__:__dq__${properties.binary_path}__dq____cc__'
          #end if
        
          #if str($input_top_path) != 'None':
            --input_top_path ${input_top_path}_`echo $$`.${input_top_path.ext}
          #end if
        
          #if str($input_traj_path) != 'None':
            --input_traj_path ${input_traj_path}_`echo $$`.${input_traj_path.ext}
          #end if
        
          #if str($input_exp_path) != 'None':
            --input_exp_path ${input_exp_path}_`echo $$`.${input_exp_path.ext}
          #end if
        
        
          --output_cpptraj_path $outname_output_cpptraj_path
        
          --output_traj_path $outname_output_traj_path
        ;
        #if $config.sele == "option1":
            rm -f ${config.properties}_`echo $$`.${config.properties.ext};
          #end if
        
          rm -f ${input_top_path}_`echo $$`.${input_top_path.ext};
        
          rm -f ${input_traj_path}_`echo $$`.${input_traj_path.ext};
        
          rm -f ${input_exp_path}_`echo $$`.${input_exp_path.ext};
        
        
          if test -f $outname_output_cpptraj_path; then mv $outname_output_cpptraj_path $output_cpptraj_path; fi;
        
          if test -f $outname_output_traj_path; then mv $outname_output_traj_path $output_traj_path; fi;
        
    ]]>
    </command>
    <inputs>
        
          <param name="input_top_path" type="data" format="top,pdb,prmtop,parmtop,zip"  optional="False" label="input TOP,PDB,PRMTOP,PARMTOP,ZIP file" help="Path to the input structure or topology file. Format: [input].[format]"/>
        
          <param name="input_traj_path" type="data" format="mdcrd,crd,cdf,netcdf,nc,restart,ncrestart,restartnc,dcd,charmm,cor,pdb,mol2,trr,gro,binpos,xtc,cif,arc,sqm,sdf,conflib"  optional="False" label="input MDCRD,CRD,CDF,NETCDF,NC,RESTART,NCRESTART,RESTARTNC,DCD,CHARMM,COR,PDB,MOL2,TRR,GRO,BINPOS,XTC,CIF,ARC,SQM,SDF,CONFLIB file" help="Path to the input trajectory to be processed. Format: [input].[format]"/>
        
          <param name="input_exp_path" type="data" format="pdb"  optional="True" label="input PDB file" help="Path to the experimental reference file (required if reference = experimental). Format: [input].pdb"/>
        
        
          <param name="outname_output_cpptraj_path" type="text" value="mycpptraj_rms.dat"
              optional="False" label="output DAT,AGR,XMGR,GNU name"
              help="Path to the output processed analysis Format: [output].[format] "/>
        
          <param name="outname_output_traj_path" type="text" value="mycpptraj_rms.mdcrd"
              optional="True" label="output MDCRD,CRD,CDF,NETCDF,NC,RESTART,NCRESTART,RESTARTNC,DCD,CHARMM,COR,PDB,MOL2,TRR,GRO,BINPOS,XTC,CIF,ARC,SQM,SDF,CONFLIB name"
              help="Path to the output processed trajectory Format: [output].[format] "/>
        
        <conditional name="config">
            <param name="sele" type="select" label="Take tool settings:" help="Select where tool settings are to be read from">
              <option value="option3">Manual Input</option>
              <option value="option1">from configuration file</option>
              <option value="option2">from JSON string</option>
            </param>
            <when value="option1">
              <param name="properties" type="data" format="yml,json" optional="false" label="Configuration file" help="File containing tool settings. See below for the syntax"/>
            </when>
            <when value="option2">
              <param name="jsonstr" type="text" value="{}" optional="false" label="JSON string" help="JSON string containing tool settings. See below for the syntax"/>
            </when>
            <when value="option3">
            </when>
          </conditional>
          <section name="properties" title="Properties Input">
            
              <param name="start" type="integer"
                  value="1"
                  min="1" max="100000"
                  label="start" help="Starting frame for slicing" optional="false"/>
            
              <param name="end" type="integer"
                  value="-1"
                  min="-1" max="100000"
                  label="end" help="Ending frame for slicing" optional="false"/>
            
              <param name="steps" type="integer"
                  value="1"
                  min="1" max="100000"
                  label="steps" help="Step for slicing" optional="false"/>
            
              <param name="mask" type="select" label="mask" help="Mask definition. " multiple="false">
                  
                    <option value="c-alpha"
                      
                    >c-alpha
                       - All c-alpha atoms; protein only
                    </option>
                  
                    <option value="backbone"
                      
                    >backbone
                       - Backbone atoms
                    </option>
                  
                    <option value="all-atoms"
                      selected="true"
                    >all-atoms
                       - All system atoms
                    </option>
                  
                    <option value="heavy-atoms"
                      
                    >heavy-atoms
                       - System heavy atoms; not hydrogen
                    </option>
                  
                    <option value="side-chain"
                      
                    >side-chain
                       - All not backbone atoms
                    </option>
                  
                    <option value="solute"
                      
                    >solute
                       - All system atoms except solvent atoms
                    </option>
                  
                    <option value="ions"
                      
                    >ions
                       - All ion molecules
                    </option>
                  
                    <option value="solvent"
                      
                    >solvent
                       - All solvent atoms
                    </option>
                  
                    <option value="AnyAmberFromatMask"
                      
                    >AnyAmberFromatMask
                       - Amber atom selection syntax like `@*`
                    </option>
                  
                </param>
            
              <param name="reference" type="select" label="reference" help="Reference definition. " multiple="false">
                  
                    <option value="first"
                      selected="true"
                    >first
                       - Use the first trajectory frame as reference
                    </option>
                  
                    <option value="average"
                      
                    >average
                       - Use the average of all trajectory frames as reference
                    </option>
                  
                    <option value="experimental"
                      
                    >experimental
                       - Use the experimental structure as reference
                    </option>
                  
                </param>
            
              <param name="nofit" type="boolean"
                  
                  label="nofit" help="Do not perform best-fit RMSD"
                />
            
              <param name="norotate" type="boolean"
                  
                  label="norotate" help="Translate but do not rotate coordinates"
                />
            
              <param name="nomod" type="boolean"
                  
                  label="nomod" help="Do not modify coordinates"
                />
            
              <param name="binary_path" type="text" label="binary_path" help="Path to the cpptraj executable binary." optional="false"
                  value="cpptraj"
                >
                  <sanitizer><valid initial="string.printable"/></sanitizer>
                </param>
            
              <param name="output_cpptraj_path_format" type="select" label="output_cpptraj_path_format" help="Format of the output file" multiple="false">
                  
                    <option value="dat"
                      
                    >dat
                       
                    </option>
                  
                    <option value="agr"
                      
                    >agr
                       
                    </option>
                  
                    <option value="xmgr"
                      
                    >xmgr
                       
                    </option>
                  
                    <option value="gnu"
                      
                    >gnu
                       
                    </option>
                  
                </param>
            
              <param name="output_traj_path_format" type="select" label="output_traj_path_format" help="Format of the output file" multiple="false">
                  
                    <option value="mdcrd"
                      
                    >mdcrd
                       
                    </option>
                  
                    <option value="crd"
                      
                    >crd
                       
                    </option>
                  
                    <option value="cdf"
                      
                    >cdf
                       
                    </option>
                  
                    <option value="netcdf"
                      
                    >netcdf
                       
                    </option>
                  
                    <option value="nc"
                      
                    >nc
                       
                    </option>
                  
                    <option value="restart"
                      
                    >restart
                       
                    </option>
                  
                    <option value="ncrestart"
                      
                    >ncrestart
                       
                    </option>
                  
                    <option value="restartnc"
                      
                    >restartnc
                       
                    </option>
                  
                    <option value="dcd"
                      
                    >dcd
                       
                    </option>
                  
                    <option value="charmm"
                      
                    >charmm
                       
                    </option>
                  
                    <option value="cor"
                      
                    >cor
                       
                    </option>
                  
                    <option value="pdb"
                      
                    >pdb
                       
                    </option>
                  
                    <option value="mol2"
                      
                    >mol2
                       
                    </option>
                  
                    <option value="trr"
                      
                    >trr
                       
                    </option>
                  
                    <option value="gro"
                      
                    >gro
                       
                    </option>
                  
                    <option value="binpos"
                      
                    >binpos
                       
                    </option>
                  
                    <option value="xtc"
                      
                    >xtc
                       
                    </option>
                  
                    <option value="cif"
                      
                    >cif
                       
                    </option>
                  
                    <option value="arc"
                      
                    >arc
                       
