                    <option value="sqm"
                      
                    >sqm
                       
                    </option>
                  
                    <option value="sdf"
                      
                    >sdf
                       
                    </option>
                  
                    <option value="conflib"
                      
                    >conflib
                       
                    </option>
                  
                </param>
            
          </section>
    </inputs>
    <outputs>
        
        <data name="output_cpptraj_path" format="text" label="${outname_output_cpptraj_path}">
            <change_format>
            
            <when input="properties.output_cpptraj_path_format" value="dat" format="dat" />
            
            <when input="properties.output_cpptraj_path_format" value="agr" format="agr" />
            
            <when input="properties.output_cpptraj_path_format" value="xmgr" format="xmgr" />
            
