<tool id="biobb_analysis_gmx_energy_ext" name="GmxEnergy" version="3.0.0" >
    <description>: Extracts energy components from a given GROMACS energy file.</description>
    <requirements>
        <requirement type="binary">docker</requirement>
    </requirements>
    <command detect_errors="aggressive"><![CDATA[
        
          ln -f -s ${input_energy_path} ${input_energy_path}.${input_energy_path.ext};
        
        #if $config.sele == "option1":
          ln -s -f ${config.properties} ${config.properties}.${config.properties.ext};
        #end if
        docker run --rm -v $__root_dir__/database/files:$__root_dir__/database/files quay.io/biocontainers/biobb_analysis:3.0.0--py_0 gmx_energy
        #if $config.sele == "option1":
          --config ${config.properties}.${config.properties.ext}
        #else if $config.sele == "option2":
          --config '${config.jsonstr}'
        #else if $config.sele == "option4":
          --config "__oc____dq__xvg__dq__:__dq__${config.xvg}__dq__,__dq__terms__dq__:__dq__${config.terms}__dq__,__dq__gmx_path__dq__:__dq__${config.gmx_path}__dq____cc__"
        #end if
        
          --input_energy_path ${input_energy_path}.${input_energy_path.ext}
        
        
          --output_xvg_path $__root_dir__/database/files/000/$outname_output_xvg_path
        ;          
        #if $config.sele == "option1":
          rm -f ${config.properties}.${config.properties.ext};
        #end if
        
          rm -f ${input_energy_path}.${input_energy_path.ext};
        
        
          if test -f $__root_dir__/database/files/000/$outname_output_xvg_path; then mv $__root_dir__/database/files/000/$outname_output_xvg_path $output_xvg_path; fi;
        
    ]]>
    </command>
    <inputs>
        
          <param name="input_energy_path" type="data" format="edr"  optional="False" label="input EDR file" help="Path to the input EDR file. Format: [input].edr"/> 
        
        
